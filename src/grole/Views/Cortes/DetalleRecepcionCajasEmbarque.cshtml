@model List<grole.src.Entidades.Corte>
<h2>Detalle Recepcion de Cajas en Embarque</h2>

<p>
    Fecha: @Context.Request.Query["Fecha"], Producto: @Context.Request.Query["Producto"]
</p>

<a href="#">Excel</a>

<table>
    <thead>
        <tr>
            <th>Folio</th>
            <th>Código de Barras</th>
            <th>Peso</th>
        </tr>
    </thead>
    <tbody>
        @{ decimal totalPeso = 0;
            if (Model.Count == 0)
            {
                <tr>
                    <td>No Hay registros</td>
                </tr>
            }
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Folio</td>
                    <td>@item.CodigoBarras</td>
                    <td>@Decimal.Round(item.Peso, 2)</td>
                </tr>
                totalPeso += @item.Peso;
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Son @Model.Count registros</th>
            <th></th>
            <th>@Decimal.Round(totalPeso,2)</th>
        </tr>
    </tfoot>
</table>